<%= render 'recipes/search'%>
<h3>Search results for <%= @search_query %></h3>
<table border ="1">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Ranking</th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to image_tag(recipe["image_url"], size: "100x100"), recipe["f2f_url"] %></td>
        <td><%= link_to(sanitize(recipe["title"]), recipe["f2f_url"]) %></td>
        <td><%= recipe["social_rank"].to_i %></td>
      </tr>
    <% end %>
  </tbody>
</table>